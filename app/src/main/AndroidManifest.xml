<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.julia.android.worderly">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WorderlyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.signin.SignInActivity" />
        <activity android:name=".ui.search.view.SearchOpponentActivity" />
        <activity android:name=".ui.game.view.GameActivity" />

    </application>

</manifest>