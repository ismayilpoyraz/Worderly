<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayoutVertical"
    android:background="@color/blue_grey_50"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/PlayersTextView"
                    android:text="@string/msg_you" />

                <TextView
                    style="@style/PlayersTextView"
                    android:text="@string/msg_opponent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    style="@style/PlayerCardView"
                    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        style="@style/LinearLayoutVertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_avatar_current_user"
                            style="@style/PlayerAvatarImage" />

                        <TextView
                            android:id="@+id/text_current_user"
                            style="@style/PlayerUsernameTextView" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    style="@style/PlayerCardView"
                    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        style="@style/LinearLayoutVertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_avatar_opponent_user"
                            style="@style/PlayerAvatarImage" />

                        <TextView
                            android:id="@+id/text_username_opponent"
                            style="@style/PlayerUsernameTextView" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:padding="@dimen/linear_layout_padding">

                <TextView
                    android:id="@+id/text_word"
                    style="@style/WordTextView" />

                <View
                    style="@style/HorizontalDividerView"/>

                <TextView
                    android:id="@+id/text_word_definition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/definition_padding_top"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_word"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="@string/msg_enter_word_here"
                    android:textSize="@dimen/text_size_medium" />

                <Button
                    android:id="@+id/button_send_word"
                    android:layout_width="@dimen/send_btn_width"
                    android:layout_height="@dimen/send_btn_height"
                    android:layout_gravity="bottom"
                    android:enabled="false"
                    android:text="@string/msg_send"
                    android:textSize="@dimen/text_size_medium"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>