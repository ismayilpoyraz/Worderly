<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HorizontalDividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_divider_height</item>
        <item name="android:background">@color/blue_grey_100</item>
    </style>

    <style name="PlayersTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_grey_100</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="PlayerCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LinearLayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlayerAvatarImage">
        <item name="android:layout_width">@dimen/player_avatar_size</item>
        <item name="android:layout_height">@dimen/player_avatar_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/ic_account_circle_black_36dp</item>
    </style>

    <style name="PlayerUsernameTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue_grey_100</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="WordTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/word_padding_bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>